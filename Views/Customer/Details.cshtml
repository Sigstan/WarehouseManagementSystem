@using Microsoft.EntityFrameworkCore.Metadata.Conventions
@model WarehouseManagementSystem.WEB.Models.ExtendedCustomerViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Customer Details</h1>

<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Birthday)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Birthday)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ClientType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClientType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RegisteredInventory)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RegisteredInventory)
        </dd>
    </dl>
    
        <table class="table">
            <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Inventory.FirstOrDefault().Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Inventory.FirstOrDefault().Weight)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Inventory.FirstOrDefault().Sector)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Inventory.FirstOrDefault().StoredDateTime)
                </th>
            
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Inventory) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Weight)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sector)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StoredDateTime)
                    </td>
                 
                    <td>
                        @Html.ActionLink("Delete", "Delete", "Inventory", new { inventoryId = item.Id, customerId = item.CustomerId})|
                        @Html.ActionLink("Details", "Details", "Inventory", new { inventoryId = item.Id})
                    </td>
                </tr>
            }
            </tbody>
        </table>
    
</div>
<div>
    @Html.ActionLink("Add Inventory", "Create", "Inventory", new {  customerId = Model.Id })
</div>
<a href='javascript:history.go(-1)'>Back</a>
